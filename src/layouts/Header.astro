---
import { Image } from "astro:assets";

import Icon1 from "@assets/icons/icon1.svg";
import Icon2 from "@assets/icons/icon2.svg";
import Icon3 from "@assets/icons/icon3.svg";
import Icon4 from "@assets/icons/icon4.svg";
import Icon5 from "@assets/icons/icon5.svg";
import Icon6 from "@assets/icons/icon6.svg";

---

<aside class="hidden xl:block bg-white p-4">

    <section class="max-w-screen-xl mx-auto flex items-center justify-between">
        
        <article class="flex items-center gap-4 text-cyan-900">
            <Image src={Icon1} alt="Icon1" />
    
            <div class="font-semibold">
                <p class="text-cyan-500">Contact Us</p>
                <p class="text-lg font-bold">+1 123 456 7890</p>
            </div>
        </article>

        <article class="flex items-center gap-4 text-cyan-900">
            <Image src={Icon2} alt="Icon2" />
              
            <div class="font-semibold">
                <p class="text-cyan-500">Email Support</p>
                <p class="text-lg font-bold">email@domain.com</p>
            </div>
        </article>

        <article class="flex items-center gap-4 text-cyan-900">
            <Image src={Icon3} alt="Icon3" />
    
            <div class="font-semibold">
                <p class="text-cyan-500">Online Appointment</p>
                <p class="text-lg font-bold">Book Now</p>
            </div>
        </article>

        <article class="flex items-center gap-4 text-cyan-900">
            <Image src={Icon4} alt="Icon4" />
    
            <div class="font-semibold">
                <p class="text-cyan-500">Supports</p>
                <p class="text-lg font-bold">24x7 Supports</p>
            </div>
        </article>

        <article class="flex items-center gap-4 text-cyan-900">
            <Image src={Icon5} alt="Icon5" />

            <div class="font-semibold">
                <p class="text-cyan-500">Payment</p>
                <p class="text-lg font-bold">Pay Online</p>
            </div>
        </article>

        <article class="flex items-center gap-4 text-cyan-900">
            <Image src={Icon6} alt="Icon6" />
    
            <div class="font-semibold">
                <p class="text-cyan-500">My Cart</p>
                <p class="text-lg font-bold">2 Items</p>
            </div>
        </article>
    </section>

</aside>